{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "strict": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "sourceMap": false,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": [
      "es2016",
      "es2016.array.include"
    ],
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}